<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:elevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coin_name"
            android:text="Coin Name"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:fontFamily="@font/l"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:fontFamily="@font/space"
            android:id="@+id/exchange_name"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:text="Exchange"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="Volume"
            android:fontFamily="@font/l"
            android:textSize="16sp"
            android:id="@+id/volume"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change%"
            android:id="@+id/change"
            android:textSize="20sp"
            android:fontFamily="@font/brick"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:id="@+id/spread"
            android:fontFamily="@font/brick"

            android:text="Spread"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Price Un"
            android:layout_margin="4dp"
            android:fontFamily="@font/brick"
            android:textSize="20sp"
            android:id="@+id/price_uncoverted"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/price_uncoverted"
            android:text="Price"
            android:fontFamily="@font/brick"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:id="@+id/price"
            android:textColor="@color/black"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>